<launch>
 <!-- separate startup for just robot controller python node for debugging -->
    <node pkg="Turner25" 
    	  name="Controller" 
	  type="controller.py"
	  launch-prefix="nice -n 10  xterm -bg orange -fg black -geometry 64x8+500+550 -title 'Controller Debug Info' -e"
	  >
	  <remap from="velCMD" to="Velocity"/>
    </node>


<!-- monitor optitrack/pose -->
